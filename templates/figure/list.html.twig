{% extends 'base.html.twig' %}

{% block title %}Figure index{% endblock %}

{% block body %}
    <div class="card_container">
        {% for figure in figures %}
        <div class="card">
            <div class="card-body">
                <a href="{{ path('figure_show', {'slug': figure.slug}) }}"><h5 class="card-title ">{{ figure.name }}</h5></a>
                <p class="card-text">
                    {{ figure.description }}
                </p>
                <p class="card-text">
                    <small class="text-muted">Post cr√©e le {{ figure.createdAt|date("d/m/Y") }}</small>
                </p>
            </div>
            <img src="{{ figure.imageUrl }}" class="card-img-bottom" alt="{{ figure.name }}"/>
        </div>
        {% else %}
            <h2>No records found</h2>
        {% endfor %}
    </div>
{% endblock %}