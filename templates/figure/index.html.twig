{% extends 'base.html.twig' %}

{% block title %}Figure index{% endblock %}

{% block header %}
    <!-- Background image -->
    <div class="p-5 text-center bg-image" style="background-image: url('https://snowtricks.thibaut-tourte.com/images/home.jpg');height: 600px;">
        <div class="mask" style="background-color: rgba(0, 0, 0, .4);">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white">
                    <h1 class="mb-3">SnowTrick</h1>
                    <h4 class="mb-3">Découvrez les meilleurs figure de snowboard sur notre site.</h4>
                    <a class="btn btn-outline-light btn-lg" href="#groups" role="button">Cétégorie de figure</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Background image -->
{% endblock %}
{% block body %}
    <div class="card_container flex-row" style="flex-direction: row!important; display: flex; flex-wrap: wrap; justify-content: space-around;">
        {% for figure in figures %}
            <div class="card" style="width: 18rem; margin: 5px;">
                <img class="card-img-top" src="{{ figure.imageUrl }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ figure.name }}</h5>
                    <span class="card-text" style="color: #7b7a7a;"><small>Post crée le {{ figure.createdAt|date("d/m/Y") }}</small></span>
                    <p class="card-text">{{ figure.description|length > 100 ? figure.description|slice(0, 100) ~ '...' : figure.description }}</p>
                    <div class="btn-group">
                        <a href="{{ path('figure_show', {'slug': figure.slug}) }}" class="btn btn-primary">Voir</a>
                        <a href="#" class="btn btn-danger">Editer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <hr>
    <a class="btn btn-success" href="{{ path('figure_new') }}">Create new figure</a>
{% endblock %}
